
#include <LiquidCrystal_I2C.h>
LiquidCrystal_I2C lcd(32,16,2);
int buzzer = 8;
int button1 = 10;
int button2 = 11;
int potensi = A3;
int trig = A2;
int echo = A1;
String Atas= "X  O  X  O  O X ";
String Bawah= " X  X  O  X  O O ";
int PosisiAwalPlayer = 15;
char inchar;
int pindah = 0;
String state = "Awal";
int coba;

void setup(){
  pinMode(buzzer, OUTPUT);
  pinMode(button1, INPUT);
  pinMode(button2, INPUT);
  pinMode(potensi, INPUT);
  pinMode(trig, OUTPUT);
  pinMode(echo, INPUT);
  Serial.begin(9600);
  lcd.init();
  lcd.clear();
  lcd.backlight();
  lcd.setCursor(1, 0);
  lcd.print("NAMA ANDA:Mirza" );
  lcd.setCursor(1, 1);
  lcd.print("NIM: 6702220017 " );
  delay(1000);
  lcd.clear();
  lcd.setCursor(7, 0);
  lcd.print("Space");
  lcd.setCursor(8, 1);
  lcd.print("Wars<");
  
  lcd.clear();
  
}

void loop()
{
  Awal();
  if(inchar == 'c'){
    state = "mainkan";
  }
  if(state == "mainkan"){
  delay(100);
  lcd.clear();
  for(int i = 16; i >= 0; i--){
    char Atasc = Atas[i];
    char Bawahc = Bawah[i];
    coba = PosisiAwalPlayer - i; 
    lcd.clear();
    if(digitalRead(button1)==LOW){
     pindah = 0;
     Serial.print("1");
    }
    else  if(digitalRead(button2)==LOW){
     pindah = 1;
     Serial.print("2");
    }
    if(pindah == 0){
       if(Atas[i] == 'X'){
        digitalWrite(buzzer, HIGH);
        Serial.print("oops");
      } else if(Atas[i] == 'O'){
        digitalWrite(buzzer, LOW);
       } else {
          digitalWrite(buzzer, LOW);
       } 
    } else if(pindah == 1){
      if(Bawah[i] == 'X'){
        digitalWrite(buzzer, HIGH);
        Serial.print("oops");
      } else if(Bawah[i] == 'O'){
        digitalWrite(buzzer, LOW);
    } 
      else {
          digitalWrite(buzzer, LOW);
       }
    }
    lcd.setCursor(15, pindah);
    lcd.print("<");
    lcd.setCursor(coba, 0);
    lcd.print(Atas);
    lcd.setCursor(coba, 1);
    lcd.print(Bawah);
}
}
}



######################### sensor ultrasonic ##########################

#include <LiquidCrystal_I2C.h>
LiquidCrystal_I2C lcd(32,16,2);

const int trigPin = 11;
const int echoPin = 10;
bool n = 0;
int but1 = 5;
int but2 = 6;
String ats = "   O  O  O X"; 
String bwh = "  X O X  O  O"; 
int buz = 2;
char plane = '<';
bool status = false;
char in;
int score = 3;


void setup()
{
  
 
  pinMode(trigPin, OUTPUT);
  pinMode(echoPin, INPUT);
  Serial.begin(9600);
  lcd.begin(16,2);
  pinMode(buz, OUTPUT);
  lcd.init();	
  pinMode(but1, INPUT);
  pinMode(but2, INPUT);
  lcd.backlight();
  menu();
}

void loop()
{
  while (Serial.available() > 0){
    char in = Serial.read();
  	if (in == 'y' || in == 'Y'){
      	score = 3;
    	status = true;
    }
    if (in == 'b' || in == 'B'){
      	score = 3;
    	menu();
    }
  }
  a:
 if (status == true){
  for (int i = 0; i <= 15; i++){
	long duration, inches, cm;
	digitalWrite(trigPin, LOW);
	delayMicroseconds(2);
	digitalWrite(trigPin, HIGH);
	delayMicroseconds(10);
	digitalWrite(trigPin, LOW);
	duration = pulseIn(echoPin, HIGH);
	inches = microsecondsToInches(duration);
	cm = microsecondsToCentimeters(duration);
	cm = map(cm, 10, 300, 100, 1000); 
  Serial.print("Jarak : ");
  Serial.println(cm);
    lcd.clear();
    lcd.setCursor(0,1);
    lcd.print(score);
    Serial.print(score);
  	lcd.setCursor(i,0);
    lcd.print(ats);
    lcd.setCursor(i,1);
    lcd.print(bwh);

  	control();
    lcd.setCursor(15,n);
    lcd.print(plane);    
    delay(cm);
    
	    if (n == 0 && (i == 3)){
          digitalWrite(buz, HIGH);
          delay(100);
          
          digitalWrite(buz, LOW);
          score--;
        }
    	if (n == 0 && (i == 6 || i == 9 || i == 12 || i == 16)){
          	digitalWrite(buz, HIGH);
          	delay(100);
          	digitalWrite(buz, LOW);
    		score++;
    	}
    	if (n == 1 && (i == 9 || i == 13)){
          digitalWrite(buz, HIGH);
          delay(100);
          digitalWrite(buz, LOW);
          score--;
        }
       	if (n == 1 && (i == 3 || i == 6 || i == 11)){
          	digitalWrite(buz, HIGH);
          	delay(100);
          	digitalWrite(buz, LOW);
    		score++;
    	}
   		if (score == 0){
          lcd.clear();
          lcd.setCursor(0,0);
          lcd.print("Kalah | Skor:");
          lcd.setCursor(14,0);
          lcd.print(score);
          Serial.print(score);
          lcd.setCursor(0,1);
          lcd.print("y: mulai b: kembali");          
          status = false;
      	  goto a;
         }
        if (i == 15){
          lcd.clear();
          lcd.setCursor(0,0);
          lcd.print("Kalah | Skor:");
          lcd.setCursor(14,0);
          lcd.print(score);
          lcd.setCursor(0,1);
          lcd.print("y: mulai b: kembali");          
          status = false;
      	  goto a;
        }

        
    
  }
}
}

void menu (){
  lcd.clear();
  lcd.setCursor(0,0);
  lcd.print("Afif Syam");
  lcd.setCursor(0,1);
  lcd.print("6702223011");
  lcd.setCursor(15,0);
  lcd.print(score);
  Serial.print(score);
}


void control(){
  	int push = digitalRead(but1);
    int push1 = digitalRead(but2);
	if (push == LOW){
    	n = 0;
  	}
  	if (push1 == LOW){
    	n = 1;
  	}    
}


long microsecondsToInches(long microseconds)
{
 return microseconds / 74 / 2;
}

long microsecondsToCentimeters(long microseconds)
{
 return microseconds / 29 / 2;
}



        
  void Awal(){
    while(Serial.available() > 0){
      inchar = (char)Serial.read();
    }
  }




  ###################################### sensor photodiode ##############################################


#include <LiquidCrystal_I2C.h>
LiquidCrystal_I2C lcd(32,16,2);

const int trigPin = 11;
const int echoPin = 10;
bool n = 0;
int but1 = 6;
int but2 = 7;
int phdioda = A0;
String obs = "X  O  O  X  X"; // 3 6 9 12 15
String obs1 = "  X O X  O  O"; // 3 6 9 11 13
int buz = 4;
char player = '<';
bool sate = false;
char in;
int score = 3;


void setup()
{
  pinMode(but1, INPUT);
  pinMode(but2, INPUT);
  pinMode(buz, OUTPUT);
  pinMode(phdioda, INPUT);
  Serial.begin(9600);
  lcd.begin(16,2);
  lcd.init();	
  lcd.backlight();
  menu();
}

void loop()
{
  int durasi;
  while (Serial.available() > 0){
    char in = Serial.read();
  	if (in == 'c' || in == 'C'){
      	score = 3;
    	sate = true;
      	Serial.println("life score: ");
        Serial.println(score);
    }
    if (in == 'b' || in == 'B'){
      	score = 3;
    	menu();
      	Serial.println("life score: ");
        Serial.println(score);
    }
  }
  a:
 if (sate == true){
  for (int i = 0; i <= 15; i++){
    durasi = analogRead(phdioda);
    lcd.clear();
    lcd.setCursor(0,1);
    lcd.print(score);
  	lcd.setCursor(i,0);
    lcd.print(obs);
    lcd.setCursor(i,1);
    lcd.print(obs1);
    Serial.println("life score : ");
    Serial.println(score);

  	control();
    lcd.setCursor(15,n);
    lcd.print(player);    
    delay(durasi);
    
	    if (n == 0 && (i == 3 || i == 6 || i == 15)){
          digitalWrite(buz, HIGH);
          delay(100);
          digitalWrite(buz, LOW);
          score--;
        }
    	if (n == 0 && (i == 9 || i == 12)){
          	digitalWrite(buz, HIGH);
          	delay(100);
          	digitalWrite(buz, LOW);
    		score++;
    	}
    	if (n == 1 && (i == 9 || i == 13)){
          digitalWrite(buz, HIGH);
          delay(100);
          digitalWrite(buz, LOW);
          score--;
        }
       	if (n == 1 && (i == 3 || i == 6 || i == 11)){
          	digitalWrite(buz, HIGH);
          	delay(100);
          	digitalWrite(buz, LOW);
    		score++;
    	}
   		if (score == 0){
          lcd.clear();
          lcd.setCursor(0,0);
          lcd.print("GAME OVEERRR!!!");
          lcd.setCursor(0,14);
          lcd.print(score);
          lcd.setCursor(0,1);
          lcd.print("c: Ulang b: Kembali");
          Serial.println("life score : ");
          Serial.println(score);
          sate = false;
      	  goto a;
         }
        if (i == 15){
          lcd.clear();
          lcd.setCursor(0,0);
          lcd.print("Total Skor:");
          lcd.print(score);
          lcd.setCursor(0,14);
          lcd.print(score);
          lcd.setCursor(0,1);
          lcd.print("c: ulang b: kembali");
          Serial.println("life score : ");
          Serial.println(score);
          sate = false;
      	  goto a;
        }

        
    
  }
}
}

void control(){
  	int push = digitalRead(but1);
    int push1 = digitalRead(but2);
	if (push == LOW){
    	n = 0;
  	}
  	if (push1 == LOW){
    	n = 1;
  	}    
}

void menu (){
  lcd.clear();
  lcd.setCursor(0,0);
  lcd.print("M Aulia");
  lcd.setCursor(0,1);
  lcd.print("6702220053");
  lcd.setCursor(14,0);
  lcd.print(score);
	Serial.println("life score: ");
	Serial.println(score);
}

long microsecondsToInches(long microseconds)
{
 return microseconds / 74 / 2;
}

long microsecondsToCentimeters(long microseconds)
{
 return microseconds / 29 / 2;
}

  
